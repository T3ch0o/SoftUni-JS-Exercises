<h1>Welcome to SoftUni Wiki!</h1>
<section id="featured">
    <h2>Latest article</h2>
    <article>
        <h3>{{latestArticle.title}}</h3>
        <p>
            {{latestArticle.content}}
        </p>
        <div class="controls">
            {{#if latestArticle._id}}
                <a href="/article/{{latestArticle._id}}/{{lastEdit._id}}">Read more</a>
            {{/if}}
        </div>
    </article>
</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#each articles}}
            <li>
                <a id="readMore" href="/article/{{this._id}}/{{this.editId}}">{{this.title}}</a>
            </li>
        {{else}}
            <li>no articles tho show</li>
        {{/each}}
    </ul>
</section>