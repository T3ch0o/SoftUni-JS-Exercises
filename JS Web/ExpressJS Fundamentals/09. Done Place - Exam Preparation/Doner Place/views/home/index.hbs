            <img src="{{this.imageUrl}}">
            {{#if this.isAdmin}}
                <a href="/edit/{{this._id}}" class="control"><img class="control-img" src="static/img/edit.png"></a>
                <a href="/delete/{{this._id}}" class="control"><img class="control-img" src="static/img/delete.png"></a>
            {{else}}
                <a href="/product/{{this._id}}" class="button product-title">Order</a>
            {{/if}}
        </div>
    {{/each}}
</div>