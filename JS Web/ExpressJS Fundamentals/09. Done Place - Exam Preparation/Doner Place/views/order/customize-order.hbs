<h1>Customize your order</h1>
<div class="catalog">
    <div class="column">
        <img src="/{{product.imageUrl}}">
    </div>
    <div class="column">
        <h2>{{product.category}} doner, {{product.size}}cm</h2>
        <h3>Toppings</h3>
        <div class="toppings">
            <form method="post" action="/product/{{product._id}}">
                {{#each product.toppings}}
                    <input name="{{this}}" type="checkbox" value="{{this}}" checked><label for="topping{{this}}">{{this}}</label><br>
                    {{else}}
                    no toppings
                {{/each}}
                <input class="button" type="submit" value="Checkout">
            </form>
        </div>

    </div>
</div>