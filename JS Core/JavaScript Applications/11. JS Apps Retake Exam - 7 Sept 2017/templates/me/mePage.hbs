{{> header}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">Pesho</h2>

            {{> meForm}}

            <div id="myStats" class="user-details">
                <span>{{chirp}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
                {{> chirp}}
            {{else}}
                <div class="chirp"><span class="loading">No chirps in database</span></div>
            {{/each}}
        </div>
    </div>
</section>
{{> footer}}