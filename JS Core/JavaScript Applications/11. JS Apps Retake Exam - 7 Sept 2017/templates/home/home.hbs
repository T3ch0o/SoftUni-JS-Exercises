{{> header}}
<section id="viewFeed">
    {{#if isAuth}}
        <div class="content">
            <div class="chirper">

                <h2 class="titlebar">{{username}}</h2>

                {{> chirpForm}}

                <div id="userStats" class="user-details">
                    <span>{{chirp}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
                </div>
            </div>
            <div id="chirps" class="chirps"><h2 class="titlebar">Chirps</h2>
                {{#each chirps}}
                    {{> chirp}}
                {{else}}
                    No chirps in database!
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="content">
            <p>You are currently not logged in. <a href="#/login">Log in</a> / <a href="#/register">Register</a></p>
        </div>
    {{/if}}
</section>
{{> footer}}